{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prefer-const": "off",
        "linebreak-style": "off",
        "prettier/prettier": "off",
        "indent": [
            "error",
            4
        ],
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "react/jsx-one-expression-per-line": "off",
        "react/jsx-indent": "off",
        "react/jsx-indent-props": [
            "warn",
            4
        ],
        "no-plusplus": "off",
        "dot-notation": "off",
        "no-await-in-loop": "off",
        "no-trailing-spaces": "off",
        "import/prefer-default-export": "off",
        "comma-dangle": "off",
        "arrow-parens": "off",
        "no-unused-vars": "off",
        "no-use-before-define": "off",
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "radix": "off",
        "prefer-template": "off"
    }
}